<%- include('partials/header') %>
<style>
    body {
        margin: 0;
        padding: 0;
    }
    table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
    }
    th, td {
        border: 1px solid #ddd;
        padding: 12px;
        text-align: left;
    }
    th {
        background-color: #4CAF50;
        color: white;
    }
    tr:hover {
        background-color: #f5f5f5;
    }
    .btn {
        padding: 8px 16px;
        margin: 0 5px;
        cursor: pointer;
        border: none;
        border-radius: 4px;
    }
    .btn-edit {
        background-color: #2196F3;
        color: white;
    }
    .btn-delete {
        background-color: #f44336;
        color: white;
    }
    .btn-add {
        background-color: #4CAF50;
        color: white;
        margin-bottom: 20px;
        display: inline-block;
        text-decoration: none;
        padding: 10px 20px;
    }
    .message {
        padding: 15px;
        margin-bottom: 20px;
        border-radius: 4px;
        transition: opacity 0.5s ease-out;
    }
    .message.fade-out {
        opacity: 0;
    }
    .success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }
    .error {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }
    .content-wrapper {
        padding: 20px;
    }
</style>
</head>
<body>
    <%- include('partials/navbar') %>
    
    <div class="content-wrapper">
        <h1>Lista de Fotos</h1>
        
        <% if (typeof message !== 'undefined' && message) { %>
            <div class="message success" id="messageBox">
                <%= message %>
            </div>
        <% } %>
        
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="message error" id="errorBox">
                <%= error %>
            </div>
        <% } %>
        
        <a href="/photos/add" class="btn btn-add">Agregar Nueva Foto</a>
        
        <table id="fotosTable">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Título</th>
                    <th>Descripción</th>
                    <th>Calificación</th>
                    <th>Ruta</th>
                    <th>Fecha Creación</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>

    <script>
        window.addEventListener('DOMContentLoaded', function() {
            const messageBox = document.getElementById('messageBox');
            const errorBox = document.getElementById('errorBox');
            
            if (messageBox) {
                setTimeout(() => {
                    messageBox.classList.add('fade-out');
                    setTimeout(() => {
                        messageBox.style.display = 'none';
                        window.history.replaceState({}, document.title, '/photos/list');
                    }, 500);
                }, 3000);
            }
            
            if (errorBox) {
                setTimeout(() => {
                    errorBox.classList.add('fade-out');
                    setTimeout(() => {
                        errorBox.style.display = 'none';
                        window.history.replaceState({}, document.title, '/photos/list');
                    }, 500);
                }, 3000);
            }
        });
        
        async function loadFotos() {
            try {
                const response = await fetch('/findAll/json');
                const fotos = await response.json();
                
                const tbody = document.querySelector('#fotosTable tbody');
                tbody.innerHTML = '';
                
                fotos.forEach(foto => {
                    const tr = document.createElement('tr');
                    tr.innerHTML = `
                        <td>${foto.id}</td>
                        <td>${foto.titulo}</td>
                        <td>${foto.descripcion}</td>
                        <td>${foto.calificacion}</td>
                        <td>${foto.ruta || 'N/A'}</td>
                        <td>${new Date(foto.createdAt).toLocaleDateString()}</td>
                        <td>
                            <button class="btn btn-edit" onclick="editFoto(${foto.id})">Editar</button>
                            <button class="btn btn-delete" onclick="deleteFoto(${foto.id}, '${foto.titulo}')">Eliminar</button>
                        </td>
                    `;
                    tbody.appendChild(tr);
                });
            } catch (error) {
                console.error('Error al cargar fotos:', error);
            }
        }
        
        function editFoto(id) {
            window.location.href = `/photos/edit/${id}`;
        }
        
        async function deleteFoto(id, titulo) {
            if (confirm(`¿Estás seguro de eliminar la foto "${titulo}"?`)) {
                try {
                    const response = await fetch(`/delete/${id}`, {
                        method: 'DELETE'
                    });
                    
                    if (response.ok) {
                        window.location.href = '/photos/list?message=' + encodeURIComponent(`Foto "${titulo}" eliminada exitosamente`);
                    } else {
                        alert('Error al eliminar la foto');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    alert('Error al eliminar la foto');
                }
            }
        }
        
        loadFotos();
    </script>

<%- include('partials/footer') %>